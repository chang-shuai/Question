<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_multiple_option_checkbox_image"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <CheckBox
        android:id="@+id/answer_multiple_option_checkbox"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/answer_multiple_option_linear"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/answer_multiple_option_image_linear"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <ImageButton

            android:layout_marginLeft="30dp"
            android:id="@+id/answer_multiple_option_image_button"
            android:src="@drawable/ic_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
